<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostList">

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/postRecycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/topBarrier"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/post" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/topBarrier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="editImage, postEdit,cancelButton"
        app:layout_constraintTop_toBottomOf="@id/postRecycleView" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/post_text"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        app:layout_constraintStart_toEndOf="@id/emojiButton"
        app:layout_constraintTop_toBottomOf="@id/bottomBarrier"
        tools:text="Пост размером .... " />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/toSave"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editText"
        app:srcCompat="@drawable/ic_check_circle_24" />

    <ImageButton
        android:id="@+id/cancelButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/toCancel"
        app:layout_constraintBottom_toTopOf="@id/editText"
        app:layout_constraintEnd_toEndOf="@id/saveButton"
        app:layout_constraintStart_toEndOf="@id/editText"
        app:srcCompat="@drawable/ic_close_24"

        />

    <ImageButton
        android:id="@+id/emojiButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/toEmoji"
        app:layout_constraintBottom_toBottomOf="@id/saveButton"
        app:layout_constraintEnd_toStartOf="@id/editImage"

        app:layout_constraintStart_toStartOf="@id/postRecycleView"
        app:layout_constraintTop_toTopOf="@id/saveButton"
        app:srcCompat="@drawable/ic_smile_24" />


    <ImageView
        android:id="@+id/editImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/postEditMessage"
        app:layout_constraintStart_toStartOf="@id/emojiButton"
        app:layout_constraintTop_toTopOf="@id/postEdit"
        app:srcCompat="@drawable/ic_edit_24"
        android:contentDescription="noDescription" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postEditMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/bottomBarrier"
        app:layout_constraintEnd_toStartOf="@id/cancelButton"
        app:layout_constraintStart_toEndOf="@id/editImage"
        app:layout_constraintStart_toStartOf="@id/editText"
        app:layout_constraintTop_toBottomOf="@+id/postEdit"
        tools:text="Здесь пост для редактирования" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/editTitle"
        android:textColor="#2FADDB"
        app:layout_constraintBottom_toTopOf="@+id/postEditMessage"
        app:layout_constraintEnd_toEndOf="@id/postEditMessage"
        app:layout_constraintStart_toStartOf="@id/postEditMessage"
        app:layout_constraintTop_toBottomOf="@+id/topBarrier"
        tools:text="Редактирование" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottomBarrier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="editText, emojiButton, saveButton " />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="postEditMessage, topDivider,
        postEdit, editImage, cancelButton"
        tools:visibility="visible" />


    <View
        android:id="@+id/topDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toTopOf="@id/topBarrier"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="681dp" />

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toTopOf="@id/bottomBarrier"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="681dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
